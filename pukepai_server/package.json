    "start:dev": "cross-env NODE_ENV=development ts-node-dev --files ./src/index.ts -p tsconfig.json",
    "start:prod": "cross-env NODE_ENV=production ts-node-dev --files ./src/index.ts -p tsconfig.json",
    "build": "cross-env NODE_ENV=production tsc -p tsconfig.json",
    "tslint": "tslint --fix -p tsconfig.json"
  },
  "keywords": [],
